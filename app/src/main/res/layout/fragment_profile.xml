<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Blue Header -->
    <View
        android:id="@+id/header_bg"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@color/biru"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_avatar_container"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_back">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_gallery"
            android:background="#EEEEEE"
            android:padding="2dp"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        tools:text="RDTX233"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_avatar_container" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="RDTX1922@gmail.com"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <!-- Content Card Container -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_email">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="32dp">

            <!-- Section 1: AKUN -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="AKUN"
                android:textColor="#888888"
                android:textStyle="bold"
                android:textSize="12sp"
                android:letterSpacing="0.05"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="4dp">

                    <!-- Edit Profile -->
                    <TextView
                        android:id="@+id/btn_edit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:drawableStart="@drawable/person"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:text="Edit Profile"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:drawableTint="@color/black" />

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F5F5F5" android:layout_marginHorizontal="16dp"/>

                    <!-- Keranjang Tiket -->
                    <TextView
                        android:id="@+id/btn_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:drawableStart="@android:drawable/ic_menu_agenda"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:text="Keranjang Tiket"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:drawableTint="@color/black" />

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F5F5F5" android:layout_marginHorizontal="16dp"/>

                    <!-- Pembatalan Tiket -->
                    <TextView
                        android:id="@+id/btn_cancellation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:drawableStart="@android:drawable/ic_menu_close_clear_cancel"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:text="Pembatalan Tiket"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:drawableTint="@color/black" />

                    <!-- Ganti Kata Sandi -->
                    <TextView
                        android:id="@+id/btn_change_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:drawableStart="@drawable/ic_lock"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:text="Ganti Kata Sandi"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:drawableTint="@color/black" />



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Section 2: PRIVASI & BANTUAN -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="PRIVASI &amp; BANTUAN"
                android:textColor="#888888"
                android:textStyle="bold"
                android:textSize="12sp"
                android:letterSpacing="0.05"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="4dp">

                    <!-- Pengaturan -->
                    <TextView
                        android:id="@+id/btn_help"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:drawableStart="@drawable/ic_settings"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:text="Pengaturan"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:drawableTint="@color/black" />

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F5F5F5" android:layout_marginHorizontal="16dp"/>

                    <!-- Panduan Pengguna -->
                    <TextView
                        android:id="@+id/btn_guide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:drawableStart="@drawable/settings"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:text="Panduan Pengguna"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:drawableTint="@color/black" />

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F5F5F5" android:layout_marginHorizontal="16dp"/>

                    <!-- Hapus Akun -->
                    <TextView
                        android:id="@+id/btn_delete_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:drawableStart="@android:drawable/ic_menu_delete"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:text="Hapus Akun"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:drawableTint="@color/black" />

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F5F5F5" android:layout_marginHorizontal="16dp"/>

                    <!-- Keluar -->
                    <TextView
                        android:id="@+id/btn_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:drawableStart="@drawable/ic_logout"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:text="Keluar"
                        android:textStyle="bold"
                        android:textColor="#F44336"
                        app:drawableTint="@color/black" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>